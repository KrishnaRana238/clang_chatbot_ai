# Environment variables for Netlify deployment
# AI API Keys (set these in Netlify dashboard)
COHERE_API_KEY=your_cohere_api_key
GROQ_API_KEY=your_groq_api_key  
MISTRAL_API_KEY=your_mistral_api_key
TOGETHER_API_KEY=your_together_api_key

# Hugging Face (backup option)
HUGGINGFACE_API_KEY=your_huggingface_token_here_optional

# Local models option
USE_LOCAL_MODEL=False

# Django settings for production
DJANGO_SECRET_KEY=your_production_secret_key_here
DEBUG=False
ALLOWED_HOSTS=*.netlify.app,localhost,127.0.0.1

# Database
DATABASE_URL=sqlite:///db.sqlite3

# Security for production
SECURE_SSL_REDIRECT=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
